{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "declarationDir": ".",
    "outDir": "dist",
    "baseUrl": "src"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"]
}