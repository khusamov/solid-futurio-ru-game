{
	"extends": "../tsconfig.base.json",
	"exclude": ["dist", "node_modules"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"lib": ["DOM"],
		"outDir": "dist",
		"baseUrl": "src",
		"declarationDir": ".",
		"plugins": [
			{
				"transform": "typescript-rtti/dist/transformer"
			}
		]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
