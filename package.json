{
	"name": "solid-futurio-ru-game",
	"packageManager": "yarn@3.1.1",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"base-types:build": "yarn workspaces foreach --include 'khusamov-base-types' run build",
		"base-types:build:watch": "yarn workspaces foreach --include 'khusamov-base-types' run build:watch",
		"command-system:build": "yarn workspaces foreach --include 'khusamov-command-system' run build",
		"command-system:build:watch": "yarn workspaces foreach --include 'khusamov-command-system' run build:watch",
		"game-command-system:build": "yarn workspaces foreach --include 'khusamov-game-command-system' run build",
		"game-command-system:build:watch": "yarn workspaces foreach --include 'khusamov-game-command-system' run build:watch",
		"inversion-of-control:build": "yarn workspaces foreach --include 'khusamov-inversion-of-control' run build",
		"inversion-of-control:build:watch": "yarn workspaces foreach --include 'khusamov-inversion-of-control' run build:watch",
		"inversion-of-control-sample:build": "yarn workspaces foreach --include 'khusamov-inversion-of-control-sample' run build",
		"inversion-of-control-sample:build:watch": "yarn workspaces foreach --include 'khusamov-inversion-of-control-sample' run build:watch",
		"rollup-config:build": "yarn workspaces foreach --include 'khusamov-rollup-config' run build",
		"rollup-config:build:watch": "yarn workspaces foreach --include 'khusamov-rollup-config' run build:watch"
	},
	"devDependencies": {
		"lerna": "^4.0.0"
	}
}
